@model IT_Inventory.Models.Office

@{
    ViewBag.Title = "Подробно";
}

<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Departments)
        </dt>
        <dd>
            @foreach (var item in Model.Departments)
            {
                @Html.ActionLink(item.Name, "Details", "Departments", new { id = item.Id }, null)
                <br/>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Назад к списку", null, null, null, new { href = Request.UrlReferrer })
</p>
